/**index.wxss**/
page{
  height: 100%;
} 
.container{
  width: 750rpx;
  height: 100%;
  background-color: pink;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  align-items: center;
}
.title{
  padding-top: 200rpx;
  color: red;
  font-size: 30px;
  font-weight: bold;
}
.search{
  width:80%;
  height:92rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  align-items: center;
}
.search input{
  width: 80%;
  height:80rpx;
  border: 1px solid plum;
  border-radius: 10rpx;
  box-shadow: 0 0 1px #238;
  padding: 0 10rpx;
}
scroll-view{
  width: 100%;
  height: 600rpx;
  background-color: #fff;
  border-top: 3px solid red; 
}
.items{
  padding: 12rpx;
  border-bottom: 1px solid #368; 
  display: flex;
  flex-direction: column;
}
.items text{
  font-size: 14px;
  color: orangered;
  font-weight: bold;
  line-height: 60rpx;
}
.items text:nth-child(2){
  font-size: 12px;
  color: #999;
  text-shadow: 0 0 #fff;
  line-height: 50rpx;
}
.msg{
  text-align: center;
}